@model Locacoes.Models.Locacao

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Locacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataLocacao" class="control-label"></label>
                <input asp-for="DataLocacao" class="form-control" type="date" />
                <span asp-validation-for="DataLocacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VeiculoIds" class="control-label">Veículos</label>
                <div class="input-group">
                    <select id="veiculoSelect" class="form-control">
                        @foreach (var veiculo in ViewBag.VeiculoId)
                        {
                            <option value="@veiculo.Value">@veiculo.Text</option>
                        }
                    </select>
                    <button type="button" id="addVeiculo" class="btn btn-primary">Adicionar</button>
                </div>

                <div id="veiculosSelecionados" class="mt-3">
                    <!-- Aqui serão exibidos os veículos selecionados -->
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var veiculosSelecionados = [];

            // Função para renderizar a lista de veículos selecionados
            function renderizarVeiculos() {
                $("#veiculosSelecionados").empty();
                veiculosSelecionados.forEach(function (veiculo, index) {
                    $("#veiculosSelecionados").append(
                        '<div class="d-flex justify-content-between align-items-center">' +
                        '<input type="hidden" name="VeiculoIds" value="' + veiculo.id + '" />' +
                        '<span>' + veiculo.nome + '</span>' +
                        '<button type="button" class="btn btn-danger btn-sm" onclick="removerVeiculo(' + index + ')">Remover</button>' +
                        '</div>'
                    );
                });
            }

            // Adicionar veículo
            $("#addVeiculo").click(function () {
                var veiculoId = $("#veiculoSelect").val();
                var veiculoNome = $("#veiculoSelect option:selected").text();

                if (!veiculosSelecionados.some(v => v.id === veiculoId)) {
                    veiculosSelecionados.push({ id: veiculoId, nome: veiculoNome });
                    renderizarVeiculos();
                } else {
                    alert("Veículo já selecionado!");
                }
            });

            // Remover veículo
            window.removerVeiculo = function (index) {
                veiculosSelecionados.splice(index, 1);
                renderizarVeiculos();
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
